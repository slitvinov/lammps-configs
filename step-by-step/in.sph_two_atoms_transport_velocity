# move two atoms with SPH
units           si
atom_style      meso/trans
atom_modify     map array sort 0 0

region		box block 0 10 0 10 0 10 units box
create_box	1 box
comm_modify     vel yes

variable        m      equal 1
mass            1  ${m}
create_atoms 1 single 5   5 5 units box
create_atoms 1 single 5.5 5 5 units box

group           fst id 1
group           scd id 2
velocity        scd set 1 0 0 units box

set                group fst meso_rho 1.0
set                group scd meso_rho 2.0

set                group all meso_e   1.0
set                group all meso_cv  1.0

variable        rho0   equal 1
variable        cutoff equal 1
variable        soundspeed equal 1
variable        viscosity  equal 1
variable        pb         equal 10
pair_style      sph/adami
pair_coeff	* * lucy ${rho0} ${soundspeed} ${viscosity} ${pb} ${cutoff}

fix	        1 all meso/trans
neigh_modify    delay 0 every 1

timestep        0.02
run             10

print "f1(t_end) = $(fx[1])"
print "x(t_end) = $(x[1])"
print "v(t_end) = $(vx[1])"
